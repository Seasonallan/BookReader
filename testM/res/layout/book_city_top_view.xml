<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<TextView android:id="@+id/text"
	    android:layout_width="match_parent" android:layout_height="match_parent"
	    android:textColor="#991A7A80" 
	    android:textSize="@dimen/font_common_num1"
	    android:paddingLeft="16.7dp" android:paddingRight="10dp" 
		android:paddingTop="@dimen/a_top_text_padding" android:paddingBottom="@dimen/a_top_text_padding"
	    />
	<TextView android:id="@+id/text_bg"
	    android:layout_width="match_parent" android:layout_height="match_parent"
	    android:textColor="#ffffff"
	    android:textSize="@dimen/font_common_num1"
	    android:paddingLeft="16.7dp" android:paddingRight="10dp" 
		android:paddingTop="@dimen/a_top_text_padding" android:paddingBottom="@dimen/a_top_text_padding"
	    />
</FrameLayout>