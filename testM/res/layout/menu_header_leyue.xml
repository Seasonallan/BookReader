<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/header_bar"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/menu_header_background"
	android:gravity="center"
	android:orientation="horizontal"
	android:paddingLeft="10dip"
	android:paddingRight="10dip"
	android:paddingTop="7dip"
	android:paddingBottom="9dip">
	<LinearLayout
		android:layout_weight="1"
		android:layout_width="0dip"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/menu_body_title"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:ellipsize="end"
			android:singleLine="true"
			android:textColor="@color/white"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/icon_fanhui"
			android:textSize="@dimen/font_common_num2" />
		<EditText 
		    android:id="@+id/menu_search_et"
		    android:layout_width="0dip"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:layout_gravity="center_vertical"
		    android:background="@drawable/search_box_bg"
		    android:gravity="center_vertical"
		    android:textColor="@color/common_6"
		    android:textSize="@dimen/font_common_num5"
		    android:hint="@string/pdf_reading_search_empty"
		    android:singleLine="true"
		    android:inputType="text"
		    android:imeOptions="actionSearch"
		    android:visibility="gone"
		    />
		<Button
			android:id="@+id/menu_buy_but"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dip"
			android:text="@string/reader_menu_buy_tip"
			android:textColor="@color/white"
			android:textSize="@dimen/font_common_num2"
			android:paddingTop="3dip"
			android:paddingBottom="3dip"
			android:visibility="gone"/>
	</LinearLayout>
    <ImageView
        android:id="@+id/menu_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:src="@drawable/icon_goumai"
        />
	<Button
		android:id="@+id/menu_add_bookmark_ib"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/bookmark_icon"
		android:visibility="gone" />
	<ImageView
	    android:id="@+id/menu_share_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
	    android:src="@drawable/btn_share" />
	<Button 
	    android:id="@+id/menu_search_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/pdf_reader_menu_search_icon"
	    android:visibility="gone"
	    />
	<Button 
	    android:id="@+id/menu_cancel_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/pdf_reader_menu_cancel_icon"
	    android:visibility="gone"
	    />
</LinearLayout>