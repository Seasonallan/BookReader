<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
  <LinearLayout 
        android:id="@+id/feedback_msg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">   
  <!-- 左边(客服)-->
  <LinearLayout 
        android:id="@+id/feedback_left_msg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dip"
        android:paddingLeft="10dip"
        android:orientation="vertical"
        android:gravity="left" >
	<TextView 
	    android:id="@+id/feedback_left_time_tv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingLeft="7dip"
	    android:textSize="@dimen/font_common_num5"
	    android:textColor="@color/common_5"
	    android:background="@null"
	    android:layout_gravity="left"
	    android:layout_marginBottom="5dp"
	    />
	 <TextView 
	    android:id="@+id/feedback_left_content_tv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/common_6"
	    android:textSize="@dimen/font_common_num5"
	    android:paddingLeft="5dip"
	    android:paddingRight="5dip"
	    android:gravity="center"
		android:maxWidth="200dp"
		android:background="@drawable/feedback_left_bg_normal"
	    />
	<LinearLayout 
	    android:id="@+id/feedback_left_img_layout"
	    android:layout_width="wrap_content"
	    android:padding="3dip"
	    android:background="@drawable/feedback_left_bg_normal"
	    android:layout_height="wrap_content">
		<ImageView 
		    android:id="@+id/feedback_left_img_iv"
		    android:layout_width="128dip"
		    android:layout_height="128dip"
		    android:scaleType="centerCrop"
		  />
	</LinearLayout> 
 </LinearLayout>
 
  <!-- 右边 (用户)-->
   <LinearLayout
        android:id="@+id/feedback_right_msg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical" 
        android:gravity="right"
        >
	<TextView 
	    android:id="@+id/feedback_right_time_tv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="@dimen/font_common_num5"
	    android:textColor="@color/common_5"
	    android:paddingRight="7dip"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="5dp"
	    android:layout_gravity="right"/>
		<TextView 
		    android:id="@+id/feedback_right_content_tv"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="@dimen/font_common_num5"
		    android:textColor="@color/common_10"
		    android:paddingLeft="5dip"
	        android:paddingRight="15dip"
	        android:gravity="center"
			android:maxWidth="200dp"
		    android:background="@drawable/feedback_right_bg_normal"
		    />
		<LinearLayout 
		    android:id="@+id/feedback_right_img_layout"
		    android:layout_width="wrap_content"
		    android:paddingLeft="5dip"
		    android:paddingRight="10dip"
		    android:paddingTop="5dip"
		    android:paddingBottom="5dip"
		    android:background="@drawable/feedback_right_bg_normal"
		    android:layout_height="wrap_content">
			<ImageView 
			    android:id="@+id/feedback_right_img_iv"
			    android:layout_width="128dip"
		        android:layout_height="128dip"
		        android:scaleType="centerCrop"
			   />
	 </LinearLayout>
    </LinearLayout>
 </LinearLayout>
  <!-- 评分 -->
 <LinearLayout
    android:id="@+id/feedback_score_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dip"
    android:visibility="visible"
    android:orientation="vertical">
	   	<TextView 
		    android:id="@+id/feedback_score_time_tv"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="7dip"
	        android:textSize="@dimen/font_common_num5"
	        android:textColor="@color/common_5"
		    android:background="@null"
		    android:layout_gravity="left"
		    />
	 <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:visibility="visible"
		    android:orientation="horizontal">
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:paddingLeft="7dip"
             android:textColor="@color/common_6"
             android:textSize="@dimen/font_common_num4"
             android:text="@string/feedback_evaluation"/>
         <TextView 
             android:id="@+id/score_value_tv"
             android:visibility="gone"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="6dip"
             android:textColor="@color/common_6"
             android:layout_gravity="center_vertical"
             android:textSize="@dimen/font_common_num4"
             android:text="@string/feedback_evaluation"
             />
       <RadioGroup 
           android:id="@+id/score_radio_group"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
	         <RadioButton 
	             android:id="@+id/feedback_well_rb"
	             android:layout_marginLeft="20dip"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:textColor="@color/common_6"
                 android:textSize="@dimen/font_common_num5"
	             android:text="@string/satisfactory_well"/>
	         <RadioButton 
	             android:id="@+id/feedback_bad_rb"
	             android:layout_marginLeft="30dip"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:textColor="@color/common_6"
                 android:textSize="@dimen/font_common_num5"
	             android:text="@string/satisfactory_un"/>
         </RadioGroup>  
        </LinearLayout>
  </LinearLayout>
</LinearLayout>