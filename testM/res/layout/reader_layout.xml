<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >
	<RelativeLayout
		android:id="@+id/reader_content_lay"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />
	<RelativeLayout
		android:id="@+id/bottom_right_lay"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:visibility="gone" />
	<include
		android:id="@+id/reader_catalog_lay"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		layout="@layout/reader_catalog_layout" />
	<include
		android:id="@+id/reader_loading_lay"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		layout="@layout/reader_loading_lay" />
	<FrameLayout
		android:id="@+id/reader_hepl_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:clickable="true"
		android:visibility="gone" />
</RelativeLayout>