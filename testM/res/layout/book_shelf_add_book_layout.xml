<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    >
    <LinearLayout 
        android:id="@+id/ll_wifi_layout"
        android:layout_height="70dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >
        <ImageView 
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/icon_wifi_cs_big"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_common_num2"
                android:text="@string/bookshelf_add_book_wifi_title"
                android:textColor="@color/common_text"
                />
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_common_num4"
                android:text="@string/bookshelf_add_book_wifi_tip"
                android:textColor="@color/common_17"
                />
        </LinearLayout>
    </LinearLayout>
    
    
    
    <LinearLayout 
        android:id="@+id/ll_import_layout"
        android:layout_height="70dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_above="@id/ll_wifi_layout"
        android:background="@color/white"
        >
        <ImageView 
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/icon_bdsj_big"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_common_num2"
                android:text="@string/bookshelf_add_book_import_title"
                android:textColor="@color/common_text"
                />
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_common_num4"
                android:text="@string/bookshelf_add_book_import_tip"
                android:textColor="@color/common_17"
                />
        </LinearLayout>
    </LinearLayout>
    
    
    <LinearLayout 
        android:id="@+id/ll_fuli_layout"
        android:layout_above="@id/ll_import_layout"
        android:layout_height="70dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >
        <ImageView 
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/icon_fuli"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_common_num2"
                android:text="@string/bookshelf_add_book_fuli_title"
                android:textColor="@color/common_text"
                />
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_common_num4"
                android:text="@string/bookshelf_add_book_fuli_tip"
                android:textColor="@color/common_17"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView 
	     android:layout_height="1px"
	     android:layout_width="fill_parent"
	     android:background="@color/common_17"
	     android:layout_above="@id/ll_wifi_layout"
	     />
    
    <ImageView 
	     android:layout_height="1px"
	     android:layout_width="fill_parent"
	     android:background="@color/common_17"
	     android:layout_above="@id/ll_import_layout"
	     />
</RelativeLayout>