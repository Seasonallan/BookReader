<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:padding="10dp" >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_common_num0"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:text="@string/comment_dialog_title_text" />

    <EditText
        android:id="@+id/comment_et"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/common_edit_bg"
        android:gravity="top"
        android:hint="@string/comment_hint_text"
        android:lines="3" />

    <LinearLayout
        android:id="@+id/edit_extra_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <RatingBar
            android:id="@+id/ratingbar"
            style="@style/customRatingBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:numStars="5"
            android:rating="5"
            android:stepSize="0.5" />
        <TextView
            android:id="@+id/star_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_common_num0"
            android:layout_marginLeft="20dp"
            android:textColor="@color/common_3"
            android:text="@string/comment_rating_score" />
    </LinearLayout>
    
    <!-- 两个按钮 -->
  <LinearLayout
    android:id="@+id/common_btn_lay"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:orientation="horizontal"
  	android:gravity="center_horizontal"
  	android:paddingTop="20dip"
  	>
  	<Button
  		android:id="@+id/dialog_ok"
  		android:layout_width="0dp"
  		android:layout_height="wrap_content"
  		android:layout_weight="1"
  		style="@style/button_blue"
  		android:text="@string/btn_text_confirm"
  		android:paddingTop="5dip"
	  	android:paddingBottom="5dip"/>
  	<Button
  		android:id="@+id/dialog_cancel"
  		android:layout_marginLeft="10dip"
  		android:layout_width="0dp"
  		android:layout_height="wrap_content"
  		android:layout_weight="1"
  		style="@style/button_white"
  		android:text="@string/btn_text_cancel"
  		android:textColor="@color/common_6"
  		android:paddingTop="5dip"
	  	android:paddingBottom="5dip" />		
  </LinearLayout>
    <LinearLayout
    android:id="@+id/deal_btn_lay"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:orientation="horizontal"
  	android:gravity="center_horizontal"
  	android:paddingTop="20dip"
  	android:visibility="gone"
  	>
  	<Button
  		android:id="@+id/dialog_deal_cancel"
  		android:layout_width="0dp"
  		android:layout_height="wrap_content"
  		android:layout_weight="1"
  		style="@style/button_white"
  		android:text="@string/btn_text_cancel"
  		android:textColor="@color/common_6"
  		android:paddingTop="5dip"
	  	android:paddingBottom="5dip" />
  	<Button
  		android:id="@+id/dialog_deal_ok"
  		android:layout_marginLeft="10dip"
  		android:layout_width="0dp"
  		android:layout_height="wrap_content"
  		android:layout_weight="1"
  		style="@style/button_blue"
  		android:text="@string/btn_text_confirm"
  		android:paddingTop="5dip"
	  	android:paddingBottom="5dip"/>	
  </LinearLayout>
