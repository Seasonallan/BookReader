<?xml version="1.0" encoding="utf-8"?>
<com.lectek.android.widget.BroadCastAdvertisementView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:background="@drawable/icon_laba" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="1" >

        <com.lectek.android.widget.CustomMarqueeTextView
            android:id="@+id/first_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="sdfsdfddfsdsdfsdfddfsdsdfsdfddfsdsdfsdfddfsd"
            android:textSize="@dimen/font_common_num5"
            android:textColor="@color/common_17" />
        
        <TextView
            android:id="@+id/second_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:visibility="gone"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:textSize="@dimen/font_common_num5"
            android:textColor="@color/common_17" />
        
    </FrameLayout>

    <ImageButton
        android:id="@+id/close_btn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/icon_close" />

</com.lectek.android.widget.BroadCastAdvertisementView>