<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/top" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://www.gueei.com/android-binding/"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="@dimen/common_content_list_padding"
    android:background="@drawable/first_item_bg">
    
    <TextView 
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:singleLine="true" binding:text="bTextPrice"
        android:textColor="@color/common_6" android:textSize="@dimen/font_common_num5"/>

    <TextView 
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:singleLine="true" binding:text="SPAN(bTextStatus,bListSpan)"
        android:textColor="@color/common_6" android:textSize="@dimen/font_common_num5"/>
    
    <TextView 
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:singleLine="true" binding:text="bTextTip"
        android:textColor="@color/common_3" android:textSize="@dimen/font_common_num5"/>
    
    <TextView 
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        binding:text="bTextDescription"
        android:textColor="@color/common_6" android:textSize="@dimen/font_common_num5"/>
</LinearLayout>