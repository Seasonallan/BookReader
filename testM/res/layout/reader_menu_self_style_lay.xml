<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="25dip">
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_vertical"
    	android:layout_marginBottom="20dip"
    	android:orientation="horizontal">
        <TextView 
            android:id="@+id/self_style_text_color_tv"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textSize="@dimen/font_dialog_text"
	  		android:textColor="@color/dialog_content"
    		android:text="@string/reader_menu_self_style_text_color"/>
        <View 
            android:layout_width="wrap_content"
    		android:layout_height="0dip"
    		android:layout_weight="1"/>
        <TextView 
            android:id="@+id/self_style_text_color_v"
            android:clickable="true"
            android:background="@drawable/setting_sefl_style_color_tip_bg"
            android:textSize="@dimen/font_dialog_text"
            android:layout_width="100dip"
    		android:layout_height="wrap_content"/>
    </LinearLayout>
   <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_vertical"
    	android:layout_marginBottom="20dip"
    	android:orientation="horizontal">
        <TextView 
            android:id="@+id/self_style_background_color_tv"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textSize="@dimen/font_dialog_text"
	  		android:textColor="@color/dialog_content"
    		android:text="@string/reader_menu_self_style_background_color"/>
        <View 
            android:layout_width="wrap_content"
    		android:layout_height="0dip"
    		android:layout_weight="1"/>
         <TextView 
            android:id="@+id/self_style_background_color_v"
            android:clickable="true"
            android:background="@drawable/setting_sefl_style_color_tip_bg"
            android:textSize="@dimen/font_dialog_text"
            android:layout_width="100dip"
    		android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:paddingLeft="10dip"
    	android:paddingRight="10dip">
        <Button 
            android:id="@+id/setting_sefl_style_success_but"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="@string/btn_text_confirm"
    		style="@style/button_big"
    		android:paddingTop="5dip"
	  	        android:paddingBottom="5dip"
    		/>
        <View 
            android:layout_width="100dip"
    		android:layout_height="0dip"/>
        <Button 
            android:id="@+id/setting_sefl_style_cancel_but"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="@string/btn_text_cancel"
    		style="@style/button_big"
    		android:paddingTop="5dip"
	  	        android:paddingBottom="5dip"
    		/>
    </LinearLayout>
</LinearLayout>