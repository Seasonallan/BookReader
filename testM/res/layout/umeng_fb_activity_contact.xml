<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".ConversationActivity" >

    <RelativeLayout
        android:id="@+id/umeng_fb_contact_header"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/head_bar_bg"
         >

        <FrameLayout
		android:id="@+id/fb_back"
		android:layout_width="50dip"
		android:layout_height="match_parent"
		android:background="@drawable/title_bar_but_selector"
		android:padding="3dip">
		<TextView
			android:id="@+id/body_title_left_but_tv"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:singleLine="true"
			android:ellipsize="end"
			android:gravity="center"
			android:textColor="@color/white"
			android:textSize="15dip" />
		<ImageView 
			android:id="@+id/umeng_fb_back"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:src="@drawable/back_btn"
			android:background="@drawable/title_bar_but_selector"
			android:scaleType="centerInside"/>
	</FrameLayout>
	
        <ImageView
		android:id="@+id/body_title_left_line"
		android:layout_width="1.5dip"
		android:layout_height="match_parent"
		android:layout_marginTop="5dip"
		android:layout_marginBottom="5dip"
		android:layout_toRightOf="@id/fb_back"
		android:background="@drawable/line_v" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/umeng_fb_contact_title"
            android:textColor="#ffffff"
            android:textSize="18dip" />

        <ImageView
            android:id="@+id/umeng_fb_save"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/umeng_fb_tick_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/umeng_fb_contact_header"
        android:background="@drawable/umeng_fb_conversation_bg" >

        <EditText
            android:id="@+id/umeng_fb_contact_info"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:background="#EEEEEE"
            android:gravity="left|top"
            android:hint="@string/umeng_fb_contact_info_hint"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/umeng_fb_contact_update_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:text="@string/umeng_fb_contact_update_at"
        android:textColor="#333333"
        android:textSize="8sp"
        android:visibility="gone" />
    
    <ImageView 
	    android:layout_width="wrap_content" android:layout_height="wrap_content"
	    android:layout_alignParentTop="true" android:layout_alignParentRight="true"
	    android:background="@drawable/main_view_right_top_icon"/>
		
	<ImageView 
	    android:layout_width="wrap_content" android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
	    android:background="@drawable/main_view_left_bottom_icon"/>
	
	<ImageView 
	    android:layout_width="wrap_content" android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
	    android:background="@drawable/main_view_right_bottom_icon"/>
	
	<ImageView 
	    android:layout_width="wrap_content" android:layout_height="wrap_content"
	    android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
	    android:background="@drawable/main_view_left_top_icon"/>
    

</RelativeLayout>