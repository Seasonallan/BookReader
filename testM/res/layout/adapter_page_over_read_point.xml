<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dip"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/overReadPointTv"
            android:layout_width="98.5dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="15dip"
            android:paddingBottom="15dip"
            android:text="@string/over_read_point_value"
            android:textColor="@color/personal_text_color"
            android:textSize="16dip" />

        <ImageView
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@drawable/person_line" />

        <TextView
            android:id="@+id/overTimeTv"
            android:layout_width="0dip"
            android:layout_height="match_parent"
           	android:layout_weight="1"
            android:gravity="center"
            android:padding="15dip"
            android:text="@string/over_read_point_value"
            android:textColor="@color/personal_text_color"
            android:textSize="16dip"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/person_line" />

</RelativeLayout>