<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://www.gueei.com/android-binding/"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_EFEFEF"
    android:paddingBottom="25dp"
    >
    
    <ImageView 
        android:id="@+id/iv_lajitong"
        android:layout_marginTop="30dp"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:src="@drawable/icon_lajitong"
        android:layout_centerHorizontal="true"
        />
    
    <TextView 
        android:id="@+id/tv_delete_file_tip"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/iv_lajitong"
        android:layout_centerHorizontal="true"
        android:text="@string/bookshelf_delete_book_file_tip"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/common_text"
        />
    
    <LinearLayout 
	    android:id="@+id/pop_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:orientation="vertical"
	     android:background="#efefef"
	     android:layout_below="@id/tv_delete_file_tip"
	     >
	     
	    <LinearLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
	        android:orientation="vertical"
	        >
	        <Button
		        android:id="@+id/btn_del_group"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:layout_marginTop="20dip"
		        android:layout_width="fill_parent"
		        android:layout_height="@dimen/menu_pop_window_item_height"
		        android:text="@string/bookshelf_delete_book_group_tip"
		        android:background="@drawable/btn_green_confirm_bg"
		        android:textStyle="bold"
		        android:textSize="@dimen/font_common_num3"
		        android:textColor="@color/common_14"
		         />
		    <Button
		        android:id="@+id/btn_del_group_and_book"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
		        android:layout_marginTop="5dip" 
		        android:layout_width="fill_parent"
		        android:layout_height="@dimen/menu_pop_window_item_height"
		        android:text="@string/bookshelf_delete_book_group_and_book_tip"
		        android:textColor="@color/common_14"
		        android:background="@drawable/btn_green_confirm_bg"
		        android:textStyle="bold"
		        android:textSize="@dimen/font_common_num3"
		        />
	    </LinearLayout>
	
	    
	    
	
	    <Button
	        android:id="@+id/btn_cancel"
	       android:layout_marginLeft="20dip"
	       android:layout_marginRight="20dip"
	       android:layout_marginTop="15dip" 
	       android:layout_width="fill_parent"
	       android:layout_height="@dimen/menu_pop_window_item_height"
	       android:text="@string/btn_text_cancel"
	       android:background="@drawable/btn_red_cancel_bg"
	       android:textStyle="bold"
	       android:textColor="@color/color_ed5145"
	       android:textSize="@dimen/font_common_num3"
	        />
	</LinearLayout>


</RelativeLayout>