<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="5dip" >
	<TextView
		android:id="@+id/dialog_title"
		android:layout_width="fill_parent"
		android:layout_height="35dip"
		android:ellipsize="end"
		android:gravity="center"
		android:singleLine="true"
		android:text="@string/update_client_update_info_title"
		android:textColor="@color/dialog_title"
		android:textSize="@dimen/font_common_num1" />
	<ImageView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/line"
		android:layout_marginTop="5dip"
		android:layout_marginBottom="10dip"/>
	<LinearLayout 
	    android:layout_width="fill_parent" android:layout_height="wrap_content"
	    android:orientation="vertical" android:paddingLeft="10dp">
	    
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/check_client_current_version"
			android:textColor="@color/common_6"
			android:textSize="@dimen/font_common_num1"
			android:visibility="gone" />
		<TextView
			android:id="@+id/current_version"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/common_6"
			android:textSize="@dimen/font_common_num1"
			android:visibility="gone" />
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dip"
			android:text="@string/check_client_update_version"
			android:textColor="@color/common_6"
			android:textSize="@dimen/font_common_num1"
			android:visibility="gone" />
		<TextView
			android:id="@+id/update_version"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/common_6"
			android:textSize="@dimen/font_common_num1" />
		<TextView
			android:id="@+id/update_size"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dip"
			android:textColor="@color/common_6"
			android:textSize="@dimen/font_common_num1"
			android:visibility="gone" />
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dip"
			android:textColor="@color/common_6"
			android:text="@string/check_client_update_message"
			android:textSize="@dimen/font_common_num1" />
		<TextView
			android:id="@+id/update_message"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:fadeScrollbars="false"
			android:maxLines="6"
			android:scrollbars="vertical"
			android:textColor="@color/common_6"
			android:textSize="@dimen/font_common_num1" />
		<CheckBox
			android:id="@+id/no_ask_cb"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:checked="false"
			android:text="@string/no_ask_again"
			android:textColor="@color/common_6"
			android:textSize="@dimen/font_common_num1"
			android:visibility="gone" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="horizontal"
		android:paddingLeft="15dp" android:paddingRight="15dp"
		android:paddingTop="10dip" >
		<Button
			android:id="@+id/dialog_update_now"
			android:layout_weight="1"
			style="@style/button_normal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginRight="3dip"
			android:paddingBottom="5dip"
			android:paddingTop="5dip"
			android:text="@string/btn_text_now_update" />
		<Button
			android:id="@+id/dialog_update_later"
			android:layout_weight="1"
			style="@style/button_white"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="3dip"
			android:paddingBottom="5dip"
			android:paddingTop="5dip"
			android:text="@string/btn_text_logout" />
	</LinearLayout>
</LinearLayout>