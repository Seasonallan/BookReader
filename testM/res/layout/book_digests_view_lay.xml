<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content">

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:id="@+id/book_digests_meum1">
	    
	     <Button 
	        android:id="@+id/digest"
	        style="@style/button_bookdigests"
	        android:background="@drawable/btn_digest_left_bg"
	        android:layout_width="fill_parent"
	   		android:layout_height="wrap_content"/>
	  
	    <Button 
	        android:id="@+id/copy_"
	         android:layout_marginLeft="-1dip"
	        style="@style/button_bookdigests"
            android:background="@drawable/btn_digest_center_bg"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"/>
	   
	   <Button 
	        android:id="@+id/beizhu_"
	        android:layout_marginLeft="-1dip"
	        style="@style/button_bookdigests"
           android:background="@drawable/btn_digest_center_bg"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"/>
	  
	    <Button 
	        android:id="@+id/share_"
	       android:layout_marginLeft="-1dip"
	        style="@style/button_bookdigests"
            android:background="@drawable/btn_digest_right_bg"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"/>
		    	
	  </LinearLayout>
	  
	  <LinearLayout
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:id="@+id/book_digests_meum2"
	    android:visibility="gone">
	    
	    <Button 
	        android:id="@+id/copy"
	        style="@style/button_bookdigests"
            android:background="@drawable/btn_digest_left_bg"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
	    
	    <Button 
	        android:id="@+id/beizhu"
	        style="@style/button_bookdigests"
	        android:layout_marginLeft="-1dip"
            android:background="@drawable/btn_digest_center_bg"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
	   
	    <Button 
	        android:id="@+id/share"
	        style="@style/button_bookdigests"
	        android:layout_marginLeft="-1dip"
            android:background="@drawable/btn_digest_center_bg"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
	    
	    <Button 
	        android:id="@+id/delete"
	        style="@style/button_bookdigests"
	        android:layout_marginLeft="-1dip"
	        android:layout_width="wrap_content"
            android:background="@drawable/btn_digest_right_bg"
	    	android:layout_height="wrap_content"/>
	    
	    	
	  </LinearLayout>

	  <RelativeLayout 
	      android:id="@+id/book_digests_view_magnifier_lay"
	      android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
			android:visibility="gone">
	      <ImageView
		  	android:id="@+id/book_digests_view_magnifier_lv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="2dip"
			android:scaleType="fitXY"/>
		  <ImageView
			android:background="@drawable/magnifier"
			android:layout_alignLeft="@id/book_digests_view_magnifier_lv"
			android:layout_alignRight="@id/book_digests_view_magnifier_lv"
			android:layout_alignTop="@id/book_digests_view_magnifier_lv"
			android:layout_alignBottom="@id/book_digests_view_magnifier_lv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		</RelativeLayout>
 </FrameLayout>

