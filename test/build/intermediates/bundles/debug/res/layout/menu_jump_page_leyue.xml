<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:orientation="vertical">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dip"
		android:layout_marginTop="15dip"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:gravity="center_vertical"
		android:orientation="horizontal" >
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/reader_menu_item_pre_chapter_tip"
			android:textColor="@color/common_white_2"
			android:textSize="@dimen/font_common_num5" />
		<TextView
			android:id="@+id/page_text"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:textColor="@color/common_white_2"
			android:textSize="@dimen/font_common_num5" />
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/reader_menu_item_next_chapter_tip"
			android:textColor="@color/common_white_2"
			android:textSize="@dimen/font_common_num5" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="horizontal" >
		<ImageButton
			android:id="@+id/jump_pre_but"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@null"
			android:padding="15dip"
			android:scaleType="fitCenter"
			android:src="@drawable/menu_icon_pre_set_selector" />
		<SeekBar
			android:id="@+id/jump_page_seek"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
		<ImageButton
			android:id="@+id/jump_next_but"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@null"
			android:padding="15dip"
			android:scaleType="fitCenter"
			android:src="@drawable/menu_icon_next_set_selector" />
	</LinearLayout>
</LinearLayout>